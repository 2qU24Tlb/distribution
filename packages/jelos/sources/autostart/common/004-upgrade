. /etc/profile

if [ "$(cat /storage/.config/boot.hint)" = "UPGRADE" ]
then
  if [ -e "/usr/share/post-update" ]
  then
    /usr/share/post-update
  fi
  rm /storage/.config/boot.hint
fi
